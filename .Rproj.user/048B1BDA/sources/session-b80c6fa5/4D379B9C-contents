library(shiny)
library(shinydashboard)
library(dplyr)

# Define UI
ui <- dashboardPage(
  dashboardHeader(title = "My Dashboard"),
  dashboardSidebar(
    sidebarMenu(
      menuItem("Menu Item 1", tabName = "tab1"),
      menuItem("Menu Item 2", tabName = "tab2")
    )
  ),
  dashboardBody(
    tabItems(
      tabItem(tabName = "tab1",
              fluidRow(
                box(title = "Box 1",
                    plotOutput("plot1")),
                box(title = "Box 2",
                    tableOutput("table1"))
              )
      ),
      tabItem(tabName = "tab2",
              fluidRow(
                box(title = "Box 3",
                    selectInput("select1", "Select an option",
                                choices = c("Option 1", "Option 2"))),
                box(title = "Box 4",
                    plotOutput("plot2"))
              )
      )
    )
  )
)

# Define server
server <- function(input, output) {
  output$plot1 <- renderPlot({
    # plot data here
  })
  output$table1 <- renderTable({
    # create table here
  })
  output$plot2 <- renderPlot({
    # plot data based on input$select1 here
  })
}

# Run the app
shinyApp(ui = ui, server = server)
